<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Custom Cyclomatic Complexity Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.github.io/pmd-6.55.0/ruleset_xml_schema.xsd"
         >
    <description>
        Enforces cyclomatic complexity below 10 for all methods.
    </description>
    <rule ref="category/java/design.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="10"/>
        </properties>
    </rule>
</ruleset> 